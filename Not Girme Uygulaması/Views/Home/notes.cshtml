@using Not_Girme_Uygulaması.Models.ViewModel
@model List<notesViewModel>
@{
    ViewData["Title"] = "notes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-primary container my-2">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Öğrenci Okul Numarası</th>
            <th scope="col">Öğrenci Adı Soyadı</th>
            <th scope="col">Ders Adı</th>
            <th scope="col">Not 1</th>
            <th scope="col">Not 2</th>
            <th scope="col">Performans 1</th>
            <th scope="col">Performans 2</th>
            <th scope="col">Ortalama</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

        
        <tr>
            <th scope="row">@item.Id</th>
            <td>@item.studentNo</td>
            <td>@item.Name @item.Surname</td>
            <td>@item.LessonId</td>
            <td>@item.Not1</td>
            <td>@item.Not2</td>
            <td>@item.Per1</td>
            <td>@item.Per2</td>
            <td>@item.Average</td>
        </tr>
        }
    </tbody>
</table>
