@model students
@{
    ViewData["Title"] = "studentEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="container d-flex flex-column my-5 bg-danger justify-content-center rounded" style="width: 700px;height: 400px;" action="/home/studentEdit" method="post">
    <input type="text" asp-for="Id" name="Id" hidden/>
    <div class="form-group">
        <label>Öğrenci Adı</label>
        <input type="text" asp-for="Name" name="Name" class="form-control" placeholder="Öğrenci Adı">
    </div>
    <div class="form-group">
        <label>Öğrenci Soyadı</label>
        <input type="text" asp-for="Surname" name="Surname" class="form-control" placeholder="Öğrenci Soyadı">
    </div>
    <div class="form-group">
        <label>Öğrenci TC</label>
        <input type="text" asp-for="TC" name="TC" class="form-control" placeholder="Öğrenci TC">
    </div>
    <div class="form-group">
        <label>Öğrenci Okul Numarası</label>
        <input type="text" asp-for="No" name="No" class="form-control" placeholder="Öğrenci Okul Numarası">
    </div>
    <div class="form-group">
        <label>Öğrenci Sınıfı</label>
        <input type="text" asp-for="ClassId" name="ClassId" class="form-control" placeholder="Öğrenci Sınıfı">
    </div>
    <button type="submit" class="btn btn-primary my-2">Submit</button>
</form>