
@{
    ViewData["Title"] = "studentAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="container d-flex flex-column my-5 bg-danger justify-content-center rounded" style="width: 700px;height: 400px;" action="/Home/studentAdd" method="Post">
    <div class="form-group">
        <label>Öğrenci Adı</label>
        <input type="text" name="Name" class="form-control" placeholder="Öğrenci Adı">
    </div>
    <div class="form-group">
        <label>Öğrenci Soyadı</label>
        <input type="text" name="Surname" class="form-control" placeholder="Öğrenci Soyadı">
    </div>
    <div class="form-group">
        <label>Öğrenci TC</label>
        <input type="text" name="TC" class="form-control" placeholder="Öğrenci TC">
    </div>
    <div class="form-group">
        <label>Öğrenci Okul Numarası</label>
        <input type="text" name="No" class="form-control" placeholder="Öğrenci Okul Numarası">
    </div>
    <div class="form-group">
        <label>Öğrenci Sınıfı</label>
        <input type="text" name="ClassId" class="form-control" placeholder="Öğrenci Sınıfı">
    </div>
    <button type="submit" class="btn btn-primary my-2">Submit</button>
</form>

